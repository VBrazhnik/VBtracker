<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/background"
            android:elevation="0dp"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/setting_item_theme"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/icon_theme"
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        app:srcCompat="@drawable/theme_mode_day"
                        tools:ignore="contentDescription" />

                    <TextView
                        android:id="@+id/text_theme"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_weight="9"
                        android:ellipsize="marquee"
                        android:fontFamily="sans-serif-thin"
                        android:maxLength="50"
                        android:text="@string/set_day_mode"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/colorAccent"
                        android:textSize="16sp"
                        android:singleLine="true" />

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_gravity="bottom"
                    android:background="#2f000000" />

            </FrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_weight="2"
                        android:background="?attr/background"
                        app:srcCompat="@drawable/lock"
                        tools:ignore="contentDescription" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/activity_horizontal_margin"
                        android:layout_weight="9"
                        android:ellipsize="marquee"
                        android:fontFamily="sans-serif-thin"
                        android:maxLength="50"
                        android:text="@string/password"
                        android:textAllCaps="true"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="?attr/colorAccent"
                        android:textSize="16sp"
                        android:singleLine="true" />

                </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="0.5dp"
                android:layout_gravity="bottom"
                android:background="#2f000000" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:orientation="horizontal"
                tools:context="com.vb.tracker.lock.HomePage">

                <Button
                    android:id="@+id/password_enable_disable"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="?attr/colorAccent"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/password_change"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:fontFamily="sans-serif-thin"
                    android:textColor="?attr/colorAccent"
                    android:textColorHint="?attr/editTextBackground"
                    android:textSize="14sp" />

            </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="0.5dp"
                    android:layout_gravity="bottom"
                    android:background="#2f000000" />

            </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="top"
            android:background="@drawable/shadow_below" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom|end"
            android:background="@drawable/shadow_above" />

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>