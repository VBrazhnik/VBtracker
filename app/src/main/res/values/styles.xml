<resources>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.BlackWhite" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/black</item>
        <item name="background">@color/white</item>
        <item name="editTextBackground">@color/bright_grey</item>
        <item name="colorPrimary">@color/soft_grey</item>
        <item name="colorPrimaryDark">@color/light_grey</item>

        <item name="android:textColorHighlight">@color/light_grey</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
    </style>

    <style name="AppTheme.WhiteBlack" parent="AppTheme.NoActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="background">@color/grey</item>
        <item name="editTextBackground">@color/dark_grey</item>
        <item name="colorPrimary">@color/soft_grey</item>
        <item name="colorPrimaryDark">@color/soft_grey</item>

        <item name="android:textColorHighlight">@color/soft_grey</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:statusBarColor">@color/grey</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">0.5dp</item>
        <item name="tabPaddingStart">8dp</item>
        <item name="tabPaddingEnd">8dp</item>
        <item name="tabBackground">?attr/background</item>
    </style>

    <style name="PasswordInputStyle">
        <item name="android:gravity">center</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textSize">0sp</item>
        <item name="android:background">@drawable/password_circle_background</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="PasswordButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/password_input_button_background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="PagerTabStripText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:fontFamily">sans-serif-thin</item>
    </style>

</resources>